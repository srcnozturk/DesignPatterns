@using DesignPattern.Mediator.MediatorPattern.Results
@model List<GetAllProductQueryResult>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Ürün Fiyatı</th>
            <th>Stok Sayısı</th>
            <th>Stok Türü</th>
            <th>Kategorisi</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductStockType</td>
                <td>@item.ProductCategory</td>
                <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
                <td><a href="/Product/GetProduct/@item.ProductID" class="btn btn-outline-dark">Detaylar</a></td>
            </tr>
        }
    </table>
</div>